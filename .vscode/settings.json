{
    "cmake.sourceDirectory": "${workspaceFolder}/Development",
    "cmake.debugConfig": {
        "name": "(gdb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/nmos-cpp-sender",
        "args": ["${workspaceFolder}/Development/nmos-cpp-sender/sender.json"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    }
}